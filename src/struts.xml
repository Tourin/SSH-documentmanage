<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "struts-2.3.dtd">
<struts>
	<!-- 整合Spring -->
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.objectFactory.spring.autoWire" value="name" />

	<package name="my" extends="struts-default">
		<action name="*_acc" class="com.my.control.AccountAction"
			method="{1}">
			<result name="index">/index.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="adduser">/templates/adduser.jsp</result>
			<result name="edituser">/templates/edituser.jsp</result>
			<result name="editadmin">/templates/editadmin.jsp</result>
		</action>

		<action name="*_cou" class="com.my.control.CourseAction"
			method="{1}">
			<result name="listcourse">/listcourse.jsp</result>
			<result name="editcourse">/editcourse.jsp</result>
		</action>

		<action name="*_use" class="com.my.control.UserAction" method="{1}">
			<result name="userallcourse">/userallcourse.jsp</result>
			<result name="usercourse">/usercourse.jsp</result>
		</action>

	</package>
</struts>
